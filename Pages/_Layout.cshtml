@using Microsoft.AspNetCore.Components.Web
@namespace FrontExample.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="FrontExample.styles.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script lang="js">
        window.getUser = function()
        {
            let cpfField = document.getElementById('cpf-field')
            let cepField = document.getElementById('cep-field')
            let passField = document.getElementById('pass-field')
            let emailField = document.getElementById('email-field')

            return {
                cpf: cpfField.value,
                cep: cepField.value,
                pass: passField.value,
                email: emailField.value
            }
        }

        window.passValidation = function()
        {
            let passField = document.getElementById('pass-field')
            let repeatPassField = document.getElementById('repeat-pass-field')

            let pass = passField.value
            let repeatPass = repeatPassField.value

            if (repeatPass == "")
                return true

            return pass == repeatPass
        }

        window.getCpf = function()
        {
            let field = document.getElementById('cpf-field')
            return field.value;
        }

        window.getCep = function()
        {
            let field = document.getElementById('cep-field')
            return field.value;
        }
    </script>

    <script src="_content/MatBlazor/dist/matBlazor.js"></script>
    <link href="_content/MatBlazor/dist/matBlazor.css" rel="stylesheet" />
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
